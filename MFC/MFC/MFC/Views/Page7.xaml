                    <Label Text="Наименование банка" TextColor="Black" FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text="" />
                    <Label Text="Корреспондентский счёт банка" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Label Text="КПП" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Label Text="КБК" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Label Text="ОКТМО" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Label Text="УИН" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Label Text="Номер документа" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Label Text="Платильщик" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Label Text="Лицевой счёт" Grid.Row="0" TextColor="Black"  FontSize="18" FontAttributes="Bold" VerticalOptions="Start" FontFamily="PlayfairDisplay" Margin="10" />
                    <Entry Text=""/>
                    <Button Text="ПРОДОЛЖИТЬ" FontSize="14" Background="#E44E34" Grid.Row="2" HorizontalOptions="FillAndExpand" VerticalOptions="End"  HeightRequest="40" CornerRadius="16"/>
                </StackLayout>


            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>